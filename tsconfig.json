{
	"compilerOptions": {
		"target": "es2022",
		"module": "nodenext",
		"rootDir": "src",
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"isolatedModules": true,
		"verbatimModuleSyntax": true,
		"resolveJsonModule": true
	},
	"include": ["src/**/*"]
}
